<RoutingRules>
    <RoutingRule>
        <Condition>
            <KeyPrefixEquals>shop/collection</KeyPrefixEquals>
        </Condition>
        <Redirect>
            <ReplaceKeyPrefixWith>shop/#!/collection</ReplaceKeyPrefixWith>
        </Redirect>
    </RoutingRule>
    <RoutingRule>
        <Condition>
            <KeyPrefixEquals>shop/design</KeyPrefixEquals>
        </Condition>
        <Redirect>
            <ReplaceKeyPrefixWith>shop/#!/design</ReplaceKeyPrefixWith>
        </Redirect>
    </RoutingRule>
</RoutingRules>